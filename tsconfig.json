{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src"]
}
